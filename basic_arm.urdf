
<?source:http://wiki.ros.org/urdf/Tutorials?>
<?xml version="1.0"?>
<robot name="materials">

  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>


  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.2"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <link name="right_leg">
    <visual>
      <geometry>
        <box size="0.2 0.1 0.6"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="white"/>
    </visual>
  </link>

  <joint name="base_to_right_leg" type="revolute">
    <limit effort="1" velocity="1.0" lower="-1.57" upper="0"/>
    <origin xyz="0 0 0.3"/>
    <axis xyz="0 0 1" />
    <parent link="base_link"/>
    <child link="right_leg"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <link name="left_leg">
    <visual>
      <geometry>
        <box size="0.6 0.1 0.2"/>
      </geometry>
      <origin rpy="0 1.57075 0" xyz="0 0 0"/>
      <material name="white"/>
    </visual>
  </link>

  <joint name="base_to_left_leg" type="revolute">
    <parent link="right_leg"/>
    <child link="left_leg"/>
    <origin xyz="0 0.1 0.5"/>
    <limit effort="1" velocity="1.0" lower="-1.57" upper="0"/>
    <axis xyz="0 1 0" />
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

<link name="third_leg">
    <visual>
      <geometry>
        <box size="0.6 0.1 0.2"/>
      </geometry>
      <origin rpy="0 1.57075 0" xyz="0 0 0"/>
      <material name="white"/>
    </visual>
  </link>

<joint name="base_to_third_leg" type="revolute">
    <parent link="left_leg"/>
    <child link="third_leg"/>
    <axis xyz="0 1 0" />
    <origin xyz="0 -0.1 0.5"/>
    <limit effort="1" velocity="1.0" lower="-1.57" upper="0"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>
</robot>
